<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - plural.health</title>


    <!-- Site CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/plural.health.styles.css" asp-append-version="true" />

    <!-- Bootstrap 5.3 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Bootstrap JS bundle (Popper included) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>



    <style>

        body {
            background-color: #EDF0F8;
        }

        .grey-body {
            background-color: #EDF0F8;
        }

        table th {
            color: #A6AFC2 !important;
        }

        table td {
            color: #051438 !important;
        }

        .top-header {
            height: 70px;
            background: #F3F6FC;
            border-bottom: 1px solid #e5e7eb;
        }

        .header-logo {
            height: 32px;
            object-fit: contain;
        }

        .header-date .date-text {
            font-weight: 700;
            font-size: 18px;
            color: #0C1A4B;
            margin-right: 10px;
        }

        .header-date .time-text {
            font-size: 15px;
            color: #6B7280;
        }

        .header-greeting {
            font-weight: 600;
            color: #0C1A4B;
            font-size: 16px;
        }

        .header-icon {
            height: 24px;
            cursor: pointer;
            opacity: 0.85;
        }
        .header-icon:hover {
            opacity: 1;
        }

        .btn-pri {
            background-color: #0B0C7D;
            border: none;
        }

        .dropdown-menu .dropdown-item:hover {
            background-color: #E7E7FC;
            margin: 4px;
        }

        .dropdown-menu .dropdown-item {
            margin: 4px;
            color: #051438;
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, Arial, Helvetica, sans-serif
        }

        .non-edit-hover {
            writing-mode: sideways-lr;
            word-spacing: -3px;
            cursor: pointer; /* prevents text-edit cursor */
            display: inline-block; /* stops text-selection cursor */
            user-select: none; /* optional: prevents selecting the text */
        }

        /* Serch field */
        .input-wrapper {
            position: relative;
            width:100%;
        }
        .input-wrapper input {
            width: 100%;
            padding-left: 35px; /* Space for left icon */
            padding-right: 35px; /* Space for right icon */
            height: 40px;
        }

        .icon-left,
        .icon-right {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            color: #888;
            font-size: 16px;
            cursor: pointer;
        }

        .icon-left {
            left: 10px;
        }

        .icon-right {
            right: 10px;
        }

        /* Search field */

        /* Calender */
        .calendar-container {
            background: #677597;
            padding: 30px;
        }

        .month-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 26px;
            font-weight: bold;
            margin: 0 0 20px 0;
        }

        .month-btn {
            cursor: pointer;
            font-size: 24px;
            user-select: none;
        }

        .day-names {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            text-align: center;
            margin: 0 180px 0 180px;
            font-weight: 500;
        }

        .days-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 8px;
            margin: 0 180px 0 180px
        }

        .day {
            padding: 12px;
            text-align: center;
            border-radius: 50%;
            cursor: pointer;
            font-size: 18px;
        }

            .day:hover {
                background: rgba(255, 255, 255, 0.1);
            }

        .inactive {
            color: #b8b9c5;
        }

        .active-day {
            background: #a8bbee;
            color: #000;
            font-weight: bold;
        }
        /* Calender */
    </style>
</head>
<body>
    <header class="top-header d-flex align-items-center justify-content-between px-4">
        <!-- Left: Logo -->
        <div class="d-flex align-items-center">
            <img src="~/image/logos/logo.png" alt="Plural Logo" class="header-logo" />

            @* <a asp-page="/Index" class="navbar-brand">
                @Html.Raw(System.IO.File.ReadAllText(Path.Combine(Directory.GetCurrentDirectory(), "wwwroot", "images", "logo.svg")))
            </a> *@

            @* <a asp-page="/Index" class="navbar-brand">
                <img src="~/image/logos/plurLogo.svg" alt="Plural Logo" class="header-logo" />
            </a> *@
        </div>

        <!-- Center: Date + Time -->
        <div class="text-center header-date">
            <span class="date-text">@DateTime.Now.ToString("dd MMMM")</span>
            <span class="time-text">@DateTime.Now.ToString("hh:mm tt")</span>
        </div>

        <!-- Right: Greeting + Icons -->
        <div class="d-flex align-items-center gap-4">
            <span class="header-greeting">Hi Mr Daniel</span>

            <img src="~/image/logos/notif.png" alt="Notifications" class="header-icon" />
            @* <img src="~/images/bell-icon.png" alt="Notifications" class="header-icon" /> *@
            <img src="~/image/logos/user.png" alt="Profile" class="header-icon" />
            @* <img src="~/images/profile-icon.png" alt="Profile" class="header-icon" /> *@
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - plural.health - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <script>
        const monthLabel = document.getElementById('monthLabel');
        const daysGrid = document.getElementById('daysGrid');

        let currentDate = new Date();

        function renderCalendar() {
            const year = currentDate.getFullYear();
            const month = currentDate.getMonth();

            const firstDay = new Date(year, month, 1).getDay();
            const lastDate = new Date(year, month + 1, 0).getDate();
            const prevLast = new Date(year, month, 0).getDate();

            monthLabel.textContent = currentDate.toLocaleString('default', { month: 'long' }) + " " + year;

            daysGrid.innerHTML = "";

            // previous month days
            for (let i = firstDay; i > 0; i--) {
                const d = document.createElement("div");
                d.className = "day inactive";
                d.textContent = prevLast - i + 1;
                daysGrid.appendChild(d);
            }

            // current month days
            for (let i = 1; i <= lastDate; i++) {
                const d = document.createElement("div");
                d.className = "day";
                d.textContent = i;

                if (
                    i === new Date().getDate() &&
                    month === new Date().getMonth() &&
                    year === new Date().getFullYear()
                ) {
                    d.classList.add("active-day");
                }

                daysGrid.appendChild(d);
            }
        }

        document.getElementById("prevMonth").onclick = () => {
            currentDate.setMonth(currentDate.getMonth() - 1);
            renderCalendar();
        };

        document.getElementById("nextMonth").onclick = () => {
            currentDate.setMonth(currentDate.getMonth() + 1);
            renderCalendar();
        };

        renderCalendar();
    </script>
</body>
</html>
